@model ShopCartViewModel
<div class="container">
    @foreach(var el in Model._shopCart.ListShopItems)
    {
        <div class="alert alert-warning mt-3">
            <b>Продукти: </b> @el.Product.Name <br/>
            <b>Ціна: </b> @el.Product.Price.ToString("c")
        </div>
    }
    <hr/>
    <div class="btn btn-danger" asp-controller="Order">Оплатити</div>
</div>