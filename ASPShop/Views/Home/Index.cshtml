@model IEnumerable<ASPShop.Models.Phone>
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Магазин телефонів</title>
</head>
<body>
<h3>Смартфони</h3>
<table>
    <tr>
        <td>Модель</td>
        <td>Виробник</td>
        <td>Ціна</td>
        <td></td>
    </tr>
    @foreach (var phone in Model)
    {
        <tr>
            <td>@phone.Name</td>
            <td>@phone.Company</td>
            <td>@phone.Price</td>
            <td><a href="~/Home/Buy/@phone.Id">Купити</a></td>
        </tr>
    }
</table>
</body>
</html>