@model ShopCartViewModel
    <div class="container wow fadeIn">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Ваша корзина</span>
            <span class="badge badge-secondary badge-pill">@Model.ShopCart.ListShopItems.Count()</span>
        </h4>
        <ul class="list-group mb-3 z-depth-1">
            @foreach (var el in Model.ShopCart.ListShopItems)
            {
            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                    <h6 class="my-0">@el.Product.Name</h6>
                </div>
                <span class="text-muted">@el.Product.Price.ToString("c")</span>
                <div>
                </div>
                <span class="text-muted"><a asp-controller="ShopCart" asp-action="RemoveFromCart" asp-route-Id="@el.Id">Видалити</a></span>
            </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                <span>Загальна сума (UAH)</span>
                <strong>@ViewBag.PriceSum</strong>
            </li>
        </ul>
        <hr />
        @if (Model.ShopCart.ListShopItems.Count() != 0)
        {
            <a class="btn btn-danger" asp-controller="Order" asp-action="Buy">Оплатити</a>
        }
    </div>