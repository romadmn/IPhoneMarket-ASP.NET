@model FavoriteProductsViewModel
@{
    ViewData["Title"] = "Каталог товарів";
}
<h3>Найкращі товари</h3>
<div class="container">
    <div class="row">
        @foreach (var product in Model.favoriteProducts)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="boximg">
                        <img src="~/@product.Img">
                    </div>
                        <div class="card-body">
                            <p class="card-text"><b>@product.Name</b></p>
                            <p class="card-text">@product.LongDesk</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a class="btn btn-outline-primary" asp-controller="ShopCart" asp-action="AddToCart" asp-route-Id="@product.Id">В корзину</a>
                                <small><b>Ціна: </b>@product.Price.ToString("c")</small>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
